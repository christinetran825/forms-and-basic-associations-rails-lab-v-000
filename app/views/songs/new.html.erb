<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "genre_list" %>
  <datalist id="genre_list">
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>">
      <% end %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :note_contents %>
  <%= f.text_field :note_contents %>
  <br />

  <%= f.submit %>
<% end %>
